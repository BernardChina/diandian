/**index.wxss**/

.header-title {
  display: block;
  font-size: 34px;
  margin-left: 15px;
  font-weight: blod;
}

.header-des {
  display: block;
  margin-left: 15px;
  margin-top: 10px;
}

.contentd {
  background-color: #fff;
  margin-top: 35px;
}

.content-block {
  /* margin-left: 15px;
  margin-right: 15px; */
  background-color: white;
  padding-bottom: 30px;
}

.content-img-view {
  text-align: center;
  height: 200px;
  background-color: #fff;
  position: relative;
  overflow: hidden;
}

.content-cover-img {
  width: 50px;
  height: 50px;
  position: absolute;
  top: 40%;
  left: 40%;
  z-index: 10;
}

.content-conver-view {
  width: 100%;
  height: 100%;
  text-align: center;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 9;
  background-color: rgba(0, 0, 0, 0.2); /*暗淡的背景*/
}

.title-view {
  width: 100%;
  height: 48px;
  display: table;
}

.content-text-title {
  padding-left: 15px;
  font-size: 18px;
  margin-top: 20px;
  display: table-cell;
  vertical-align: middle;
  color: #333;
}

.content-text-des {
  margin-left: 15px;
  margin-right: 15px;
  font-size: 13px;
  color: #afafaf;
  line-height: 1.5;
  margin-top: 15px;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}

.content-text-tag {
  margin-left: 15px;
  margin-right: 15px;
  font-size: 12px;
  color: #dedede;
  margin-bottom: -5px;
  margin-top: 15px;
}

.img {
  margin: 0px;
  width: 100%;
  height: 200px;
}
.videos {
  width: 100%;
  height: 200px;
}

.tag-view {
  vertical-align: middle;
  height: 22px;
  margin-left: 15px;
  margin-right: 15px;
  margin-top: 5px;
  display: table-cell;
  width: 40%;
  padding-right: 15px;
}

.img-enjoy {
  width: 30px;
  height: 30px;
  display: table-cell;
}

.enjoy-num {
  font-size: 8px;
  min-width: 20px;
  color: #333;
  text-align: center;
  display: table-cell;
  vertical-align: middle;
}

.line {
  background-color: #999;
  height: 0.5px;
  margin-left: 15px;
  margin-right: 15px;
}
