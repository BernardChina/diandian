/* pages/list/index.wxss */

.header-title {
  display: block;
  font-size: 34px;
  color: #128B35;
  margin-left: 15px;
  font-weight: blod;
}

.header-des {
  display: block;
  margin-left: 15px;
  margin-top: 10px;
}

.contentd {
  background-color: #fff;
  margin-top: 35px;
}

.content-block {
  margin-left: 15px;
  margin-right: 15px;
  /* margin-bottom: 30px; */
  background-color: white;
  padding-bottom: 30px;
}

.content-img-view {
  text-align: center;
  height: 200px;
  background-color: #fff;
  box-shadow: 0 8px 8px 0 rgba(0, 0, 0, 0.2);
  /* 0 阴影水平偏移值(可取正负值)
       10px 阴影垂直偏移值(可取正负值)
       10px 阴影模糊值
       rgba(0,0,0,0.2) 阴影颜色
    */
  margin-bottom: 25px; /* 底外边距 */
  border-radius: 12px; /* 设置圆角 */
  -moz-border-radius: 12px; /* 老版的Firefox浏览器 */
  position: relative;
}

.content-cover-img {
  width: 100px;
  height: 100px;
  position: absolute;   
  top: 25%;   
  left: 35%;     
  z-index: 10;   
}

.content-conver-view {
  width: 100%;
  height: 100%;
  position: absolute;   
  top: 0;   
  left: 0;     
  z-index: 9;   
  background-color: rgba(0,0,0,0.2); /*暗淡的背景*/
  margin-bottom: 25px; /* 底外边距 */
  border-radius: 12px; /* 设置圆角 */
  -moz-border-radius: 12px; /* 老版的Firefox浏览器 */
}

.content-text-title {
  margin-left: 15px;
  margin-right: 15px;
  margin-top: 10px;
  font-size: 20px;
  display: block;
  font-weight: 450;
  color: #707070;
  margin-bottom: 10px;
}

.content-text-des {
  margin-left: 15px;
  margin-right: 15px;
  font-size: 14px;
  display: block;
  color: #afafaf;
  line-height: 1.5;
}

.content-text-tag {
  margin-left: 15px;
  margin-right: 15px;
  font-size: 12px;
  color: #dedede;
  margin-bottom: -5px;
}

.img {
  margin: 0px;
  width: 100%;
  height: 200px;
  border-radius: 12px 12px 12px 12px; /* 设置圆角 上右下左 */
  -moz-border-radius: 12px 12px 12px 12px; /* 老版的Firefox浏览器 */
}
.enjoy-view {
  float: right;
}

.img-enjoy {
  width: 20px;
  height: 20px;
  display: table-cell;
  vertical-align: middle;
}

.enjoy-num {
  font-size: 12px;
  color: #128B35;
  text-align: center;
  display: table-cell;
  vertical-align: middle;
}
